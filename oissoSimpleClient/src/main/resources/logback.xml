            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{20}.%method[%line] - %msg%n%ex{full}%n</pattern>
        </encoder>
    </appender-->
    <logger name="oisso.provider.client" level="DEBUG"/>
    <logger name="org.springframework.web.servlet.view" level="DEBUG"/>
    <logger name="org.openid4java.consumer" level="DEBUG"/>
    <root level="info"> 
        <appender-ref ref="console" />
    </root>
</configuration>